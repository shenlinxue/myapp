<h1>购物车</h1>
<table class="table">
<tr>
	<th>ID</th>
	<th>name</th>
	<th>price</th>
	<th>amount</th>
	<th>合计</th>
	</tr>
	<% @shopping_carts.each do |t| %>
	<tr>
		<td><%= t.product.id %></td>
		<td><%= image_tag t.product.product_cover.url(:thumb) %><%= t.product.name %></td>
		<td><%= t.product.price %></td>
		<td><%= t.amount %></td>
		<td><%= t.product.price * t.amount %><br>
			<%= link_to "删除", shopping_cart_path(t), method: :delete, data:{ confirm: "确认删除吗?"} %>
		</td>
	</tr>
	<% end %>
	<tr>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td>
        <strong>总价: ¥<%= @shopping_carts.sum { |cart| cart.amount * cart.product.price } %></strong></td>
	</tr>
</table>
<div class="pull-right">
<%= link_to("去结算", new_order_path, class: "btn btn-danger") %>
</div>
