<div class="modal fade" tabindex="-1" id="shopping_cart_modal">
	<div class="modal-dialog modal-md">
		<div class="modal-content">
			<div class="modal-body">
				<h4 class="text text-success"><i class="fa fa-check-circle-o"></i>加入购物车成功!</h4>
				<div>
					<div>
						<a href=""><%= image_tag @product.product_cover.url(:thumb), class: 'media-object', alt: @product.name %></a>
					</div>
					<div>
						<h4><%= @product.name %></h4>
						数量: <%= @shopping_cart.amount %>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" date-dismiss="modal">继续购物</button>
				<%= link_to "查看购物车", shopping_carts_path, class: "btn btn-danger" %>
			</div>
		</div>
	</div>
</div>