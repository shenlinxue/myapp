<!DOCTYPE html>
<html>
  <head>
    <title>管理后台</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div class="container">

      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>

            </button>
            <a class="navbar-brand" href="#">管理后台</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><%= link_to '商品管理', admin_root_path %></li>
              <li><%= link_to "分类管理", admin_categories_path %></li>
              <li><a href="#">Contact</a></li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if logged_in? %>
                <li><a href="#"><%= current_user.email %></a></li>

                <li><%= link_to '退出', admin_sessions_path, method: :delete %></li>
              <% else %>
                <li><%= link_to '登录', new_admin_session_path %></li>

              <% end %>

            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
    <% if !flash[:notice].blank? %>
      <div class="alert alert-danger">
        <%= flash[:notice] %>
      </div>
    <% end %>





    <%= yield %>
     </div> <!-- /container -->
  </body>
</html>
