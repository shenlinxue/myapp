
<% @category.errors.messages.each do |m| %>
  <%= m %>
<% end %>
<%= form_for @category, url: admin_categories_path, method: :post do |t| %>
  <div class="form-group">
    <%= t.label :ancestry, "一级分类" %>
  
	<select name="ancestry">
		<% @cates.each do |c| %>
		<option value=<%= c.id %>><%= c.title %></option>
		<% end %>
		</select>

  </div>


  <div class="form-group">
    <%= t.label :title, "分类名称" %>
    <%= t.text_field :title, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= t.label :weight, "权重" %>
    <%= t.text_field :weight, class: "form-control" %>
  </div>


  
  <button type="submit" class="btn btn-default">Submit</button>

  <% end %>
