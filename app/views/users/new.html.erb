<h1>用户注册</h1>
<% unless @user.errors.blank? %>
  <div class="alert alert-danger">
  <ul>
    <% @user.errors.messages.values.flatten.each do |n| %>
      <li><%= n %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_for @user, url: users_path, method: :post do |t| %>
	<div class="form-group">
    <%= t.label :email, "邮箱" %>
    <%= t.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= t.label :password, "密码" %>
    <%= t.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= t.label :password_confirmation, "密码确认" %>
    <%= t.password_field :password_confirmation, class: "form-control" %>
  </div>


	<%= submit_tag "提交", class: "btn btn-default" %>
<% end %>
